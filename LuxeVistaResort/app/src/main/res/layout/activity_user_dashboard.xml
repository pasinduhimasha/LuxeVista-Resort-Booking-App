<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDashboard"
    android:background="@drawable/bgimage">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/dashboard_bg" />

    <TextView
        android:id="@+id/text_user_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Dashboard"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:drawablePadding="20dp" />





    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_view"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="-80dp"
        android:layout_marginBottom="20dp">







        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="12dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_column="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IMG_services"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ico_test"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/TXTBTN_services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="12dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="3"
            android:layout_column="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IMG_booking"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ic_booking"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/TXTBTN_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="12dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="3"
            android:layout_column="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IMG_about"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/starting_logo"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/TXTBTN_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About_Us"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="12dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="3"
            android:layout_column="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IMG_dbook"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ic_bookig_data"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/TXTBTN_dbook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="booking data"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>





        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="12dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="3"
            android:layout_column="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IMG_signOff"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ico_logoff"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/TXTBTN_signOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign out"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>





        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="12dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="3"
            android:layout_column="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IMG_sdata"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ico_fullname"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/TXTBTN_sdata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="services data"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>







    </GridLayout>

    <ImageView
        android:id="@+id/IMG_notifi"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_notification" />


    <ImageView
        android:id="@+id/IMG_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp"
        app:srcCompat="@drawable/ic_search" />


</RelativeLayout>